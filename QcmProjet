document.getElementById('quiz-form').addEventListener('submit', function (e) {
    e.preventDefault();
    checkAnswers();
});

function checkAnswers() {
    const answers = document.querySelectorAll('.answer:checked');
    const score = Array.from(answers).reduce((acc, answer) => {
        const questionNumber = answer.name.split('-')[1];
        const correctAnswer = getCorrectAnswer(questionNumber);
        return answer.value === correctAnswer ? acc + 1 : acc;
    }, 0);

    displayResult(score);
}

function getCorrectAnswer(questionNumber) {
    switch (questionNumber) {
        case '1':
            return 'true';
        case '2':
            return 'true';
        case '3':
            return 'true';
    }
}

function displayResult(score) {
    const alertElement = document.getElementById('alert');
    const alertTitleElement = document.querySelector('.alert-title');

    const questionItems = document.querySelectorAll('.question-item');
    questionItems.forEach((questionItem, index) => {
        const answers = questionItem.querySelectorAll('.answer');
        

        answers.forEach((answer) => {
            const answerItem = answer.closest('.answer-item');
            if (answerItem.style.backgroundColor = getCorrectAnswer ) {'#2ecc71'}
             else{'#e74c3c';} 
        });

        questionItem.style.backgroundColor = score === 3 ? '#2ecc71' : '#e74c3c';
    });

    if (score === 3) {
        alertTitleElement.innerText = 'Congratulations!! ';
        alertElement.style.backgroundColor = '#4caf50';
    } else {
        Element.style.backgroundColor = '#e74c3c';
    }
 alertElement.style.display = 'block';
}
